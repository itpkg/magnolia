<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
        <property name="cookieName" value="locale"/>
        <property name="cookieMaxAge" value="#{60*60*24*7}"/>
        <property name="defaultLocale" value="${app.default.locale}"/>
        <property name="languageTagCompliant" value="true"/>
    </bean>
    <mvc:interceptors>
        <bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
            <property name="paramName" value="locale"/>
            <property name="languageTagCompliant" value="true"/>
        </bean>
    </mvc:interceptors>

    <bean id="messageSource" class="com.github.itpkg.magnolia.auth.DatabaseMessageSource">
        <property name="useCodeAsDefaultMessage" value="true"/>
        <property name="parentMessageSource" ref="propertiesMessageSource"/>
    </bean>

    <bean id="propertiesMessageSource"
          class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="messages"/>
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="fallbackToSystemLocale" value="false"/>
    </bean>
</beans>